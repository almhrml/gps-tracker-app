<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема -->
    <style name="Base.Theme.GpsTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основной цвет статус-бара -->
        <item name="android:statusBarColor">?attr/colorSurface</item>

        <!-- Цвет иконок (true = тёмные, false = светлые) -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Для прозрачного статус-бара с отступами -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- Material 3 специфичные параметры -->
        <item name="statusBarForeground">?attr/colorOnSurface</item>
    </style>

    <!-- Тема приложения (наследуется от базовой) -->
    <style name="Theme.GpsTracker" parent="Base.Theme.GpsTracker" />
</resources>